@model ShoppingCartModel
@**@
    @*<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">*@
@*<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>*@
@*<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>*@
<!------ Include the above in your HEAD tag ---------->
@*<script src="https://use.fontawesome.com/c560c025cf.js"></script>*@


<link href="~/css/shoppingcart.css" rel="stylesheet" />

<input type="hidden" asp-for="Id"/>
  
<div class="card shopping-cart">
        <div class="card-header bg-dark text-light">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Shopping cart
            <a asp-action="Index" asp-controller="Products" class="btn btn-outline-info btn-sm pull-right">Continue shopping</a>
            <div class="clearfix"></div>
        </div>
        <div class="card-body">
            @foreach (var item in Model.Products)
    {
        @await Html.PartialAsync("CartProduct", item)
        <br />
} 
        </div>
        <div class="card-footer">
            <div class="coupon col-md-5 col-sm-5 no-padding-left pull-left">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="coupon code">
                    </div>
                    <div class="col-6">
                        @*<a asp-action="AddCoupon"  class="btn btn-default">Use coupon</a>*@  
                        <input type="submit" class="btn btn-default" value="Use coupon">
                    </div>
                </div>
            </div>
            <div class="pull-right" style="margin: 10px">
                <a asp-action="Index" asp-controller="Purchase" asp-route-cartId="@Model.Id" class="btn btn-success pull-right">Checkout</a>
                <div class="pull-right" style="margin: 5px">
                    Total price: <b>@Model.Total.ToString("C")</b>
                </div>
            </div>
        </div>
    </div>
 
